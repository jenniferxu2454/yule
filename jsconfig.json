{
	"compilerOptions": {
		"experimentalDecorators": true,
		"target": "es6",
		"baseUrl": ".",
		"module": "commonjs",
		"allowSyntheticDefaultImports": true,
		"paths": {
			"@": ["./*"],
			"@components/*": ["src/components/*"],
			"@actions/*": ["src/actions/*"],
			"@reducer/*": ["src/reducer/*"]
		}
	},
	"exclude": ["node_modules", "build"],
	"include": ["src/**/*"]
}
